@using SparkMain.ViewModels
@model RegisterVM

@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/login.css" asp-append-version="true" />

<section class="forms-section_Edited " id="log-sec">
    <h1 class="section-title_Edited" id="log-text">Login & Signup</h1>
    <div class="forms">
        <div class="form-wrapper ">
            <a href="Login#log-sec" style="text-decoration:none">
                <button type="button" class="switcher switcher-login">
                Login
                <span class="underline"></span>
                </button>
            </a>
            <form class="form form-login" action="index.html">
                <fieldset>
                    <legend>Please, enter your email and password for login.</legend>
                    <div class="input-block">
                        <label for="login-email">E-mail</label>
                        <input id="login-email" type="email" required>
                    </div>
                    <div class="input-block">
                        <label for="login-password">Password</label>
                        <input id="login-password" type="password" required>
                    </div>
                </fieldset>
                <button type="submit" class="btn-login">Login</button>
            </form>
        </div>
        <div class="form-wrapper is-active">
            <button type="button" class="switcher switcher-signup">
                Sign Up
                <span class="underline"></span>
            </button>
            <form asp-action="Register" method="post" class="form form-signup ">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <fieldset>
                    <legend>Please, enter your,UserName, email,Country, password and password confirmation for sign up.</legend>
                    <div class="input-block">
                        <label asp-for="Name">UserName</label>
                        <input asp-for="Name" required>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="input-block">
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" required>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="input-block">
                        <label asp-for="Password">Password</label>
                        <input asp-for="Password" required>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="input-block">
                        <label asp-for="ConfirmPassword">Confirm Password</label>
                        <input asp-for="ConfirmPassword" required>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    @* Have account ?  *@
                    <div class="row">
                        <div class="col-8">
                            <a href="Login#log-sec" class="donthaveAccount">Have account ?</a>


                        </div>
                    </div>
                    <input type="submit" value="Register" class="btn-login" />

                </fieldset>
            </form>
        </div>
    </div>
    
</section>

@section Scripts {
    @Html.RenderPartialAsync("_ValidationScriptsPartial");
}

